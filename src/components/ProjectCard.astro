---
export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  github: string;
  tags: string[];
}

const { title, description, image, link, github, tags } = Astro.props;
---

<div class="project-card glass-card overflow-hidden transition-transform hover:scale-[1.01] duration-300">
  <div class="flex flex-col md:flex-row">
    <!-- Project Image (full width on mobile, fixed width on desktop) -->
    <div class="w-full md:w-1/3 md:min-w-[250px]">
      <div 
        class="project-card-image w-full h-48 md:h-full bg-cover bg-center" 
        style={`background-image: url(${image})`}
      >
      </div>
    </div>
    
    <!-- Project Info -->
    <div class="w-full md:w-2/3 p-4 sm:p-6 flex flex-col">
      <h2 class="project-card-title text-2xl sm:text-3xl font-cyber text-cyber-pink mb-2">{title}</h2>
      
      <p class="project-card-description text-gray-300 mb-4">{description}</p>
      
      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
          <span class="project-card-tag bg-cyber-blue/20 text-cyber-blue px-2 py-1 rounded-full text-xs">{tag}</span>
        ))}
      </div>
      
      <!-- Buttons - Stack on mobile, side by side on larger screens -->
      <div class="mt-auto flex flex-col sm:flex-row gap-3">
        <a 
          href={link} 
          class="inline-flex items-center justify-center px-4 py-2 bg-cyber-blue text-white font-cyber rounded hover:bg-cyber-pink transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          View Details
        </a>
        
        <a 
          href={github}
          target="_blank"
          rel="noopener"
          class="inline-flex items-center justify-center px-4 py-2 bg-cyber-purple text-white font-cyber rounded hover:bg-cyber-pink transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .glass-card {
    background-color: rgba(13, 18, 30, 0.7);
    border: 1px solid rgba(5, 217, 232, 0.2);
    border-radius: 0.5rem;
    backdrop-filter: blur(10px);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .project-card {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    
    /* Stack image and content vertically on mobile */
    .project-card > div {
      flex-direction: column;
    }
    
    .project-card-image {
      border-radius: 0.25rem 0.25rem 0 0;
    }
  }
</style>

